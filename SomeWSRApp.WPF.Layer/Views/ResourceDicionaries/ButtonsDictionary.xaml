<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style 
        TargetType="Button"
        x:Key="MainStyleButton"
        BasedOn="{StaticResource BaseSizes}">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="{StaticResource MainStyleControlsBrush}"/>
    </Style>
    <Style 
        TargetType="Button"
        x:Key="MainStyleWarningButton"
        BasedOn="{StaticResource BaseSizes}">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="{StaticResource MainStyleWarningBrush}"/>
    </Style>
</ResourceDictionary>