<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Color x:Key="MainStyleBackground">#ffffff</Color>
    <Color x:Key="MainStyleWarningColor">#0098FF</Color>
    <Color x:Key="MainStyleTextColor">#333333</Color>
    <Color x:Key="MainStyleControlsColor">#e0001a</Color>
    
    <SolidColorBrush x:Key="MainStyleBackgroundBrush"   Color="{StaticResource MainStyleBackground}"/>
    <SolidColorBrush x:Key="MainStyleWarningBrush"      Color="{StaticResource MainStyleWarningColor}"/>
    <SolidColorBrush x:Key="MainStyleTextBrush"         Color="{StaticResource MainStyleTextColor}"/>
    <SolidColorBrush x:Key="MainStyleControlsBrush"     Color="{StaticResource MainStyleControlsColor}"/>
</ResourceDictionary>